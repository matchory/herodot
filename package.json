{
    "name": "herodot",
    "version": "1.0.0",
    "main": "index.js",
    "repository": "https://github.com/matchory/herodot",
    "author": "Moritz Friedrich <moritz@matchory.com>",
    "license": "MIT",
    "private": false,
    "dependencies": {
        "autoprefixer": "^10.2.4",
        "cssnano": "^4.1.10",
        "postcss": "^8.2.5",
        "postcss-cli": "^8.3.1",
        "postcss-import": "^14.0.0",
        "tailwindcss": "^2.0.3"
    },
    "scripts": {
        "build": "NODE_ENV=production postcss build ./resources/css/style.pcss --verbose --dir ./public/css --ext min.css",
        "dev": "postcss build ./resources/css/style.pcss --no-autoprefixer --verbose --dir ./public/css --ext css",
        "watch": "postcss build ./resources/css/style.pcss --no-autoprefixer --verbose --no-map --dir ./public/css --ext css --watch"
    }
}
